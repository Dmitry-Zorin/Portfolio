{
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "preserve",
		"baseUrl": ".",
		"noEmit": true,
		"strict": true,
		"allowJs": true,
		"incremental": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
